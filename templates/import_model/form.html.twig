{% extends 'base_admin.html.twig' %}
	{% block title %}
Importation d'un modèle
{% endblock %}

	{% block body %}
		<div class="container my-4" style="max-width: 600px;"> <div class="card shadow-sm">
			<div class="card-header bg-primary text-white">
				<h3 class="mb-0">Importation d'un modèle</h3>
			</div>
			<div class="card-body">
				<form method="post" action="{{ path('import_model') }}">
					<div class="mb-3">
						<label for="model_file" class="form-label">Fichier modèle :</label>
						<select name="model_file" id="model_file" class="form-select" required>
