							{% endfor %}
						</select>
					</div>

					<div class="mb-3">
						<label for="new_project_name" class="form-label">Nom du projet :</label>
						<input type="text" name="new_project_name" id="new_project_name" class="form-control" required>
					</div>

					<div class="mb-3">
						<label for="start_date" class="form-label">Nouvelle date de début :</label>
						<input type="date" name="start_date" id="start_date" class="form-control">
					</div>

					<button type="submit" class="btn btn-primary w-100">Importer</button>
				</form>
			</div>
		</div>
	</div>
{% endblock %}
