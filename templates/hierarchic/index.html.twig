							<span class="fw-semibold">{{ item.nom }}</span>
							<span class="badge bg-secondary">{{ item.fonction }}</span>
						</li>
					{% endfor %}
				</ul>

				<div class="text-center mt-4">
					<button id="save-order" class="btn btn-success">
						<i class="bi bi-save"></i>
						Enregistrer l'ordre
					</button>
				</div>
			</div>
		</div>
	</div>
{% endblock %}
