{% extends 'base_admin.html.twig' %}

{% block title %}Groupes
{% endblock %}

{% block body %}
	<div class="container py-4">
		<h1 class="text-center mb-4 fw-bold">üìÖ Ouvrir un planning de groupe</h1>

		<div class="card shadow-sm">
			<div class="card-body p-0">
				<table class="table table-hover table-striped mb-0" data-toggle="table" data-search="true" data-show-columns="false" data-pagination="true" data-page-size="10">
					<thead class="table-dark">
						<tr>
							<th data-sortable="true">Nom du groupe</th>
							<th class="text-center">Action</th>
						</tr>
					</thead>
					<tbody>
						{% for groupe in groupes %}
							<tr>
								<td class="align-middle">{{ groupe.nom }}</td>
								<td class="text-center">
									<a href="{{ path('app_plannings', {'groupe': groupe.id}) }}" class="btn btn-sm btn-outline-primary">
										<i class="bi bi-calendar3"></i>
										Ouvrir
									</a>
								</td>
							</tr>
						{% else %}
							<tr>
								<td colspan="2" class="text-center text-muted">Aucun groupe trouv√©</td>
							</tr>
						{% endfor %}
					</tbody>
				</table>
			</div>
		</div>
	</div>
{% endblock %}
