{% extends 'base_calendar.html.twig' %}

{% block title %}Liste jours fériés
{% endblock %}

{% block body %}
	<div class="container py-5">
		<h2 class="text-center fw-bold mb-4">📍 Zone :
			{{ nomzone }}</h2>

		<div class="text-start mb-4">
			<a href="{{ path('app_calendrier') }}" class="btn btn-outline-secondary">
				<i class="bi bi-arrow-left me-1"></i>
				Retour
			</a>
		</div>

		<div class="card shadow-sm">
			<div class="card-body p-0">
				<table class="table table-striped table-hover mb-0 text-center" data-toggle="table">
					<thead class="table-light">
						<tr>
							<th scope="col">🗓️ Jour férié</th>
						</tr>
					</thead>
					<tbody>
						{% for i in tabjoursferies %}
							<tr>
								<td>{{ i }}</td>
							</tr>
						{% else %}
							<tr>
								<td class="text-muted">Aucun jour férié défini.</td>
							</tr>
						{% endfor %}
					</tbody>
				</table>
			</div>
		</div>
	</div>
{% endblock %}
